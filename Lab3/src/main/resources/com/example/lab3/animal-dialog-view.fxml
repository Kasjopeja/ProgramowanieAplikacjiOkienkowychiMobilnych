<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab3.AnimalDialogController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Species:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="speciesField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Condition:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="conditionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
