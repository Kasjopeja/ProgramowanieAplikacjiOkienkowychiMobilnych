<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

    <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik: 0"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

    <GridLayout
            android:layout_width="296dp"
            android:layout_height="199dp"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginTop="16dp">

        <Button android:id="@+id/button1" android:layout_width="100dp" android:layout_height="100dp"/>
        <Button android:id="@+id/button2" android:layout_width="100dp" android:layout_height="100dp"/>
        <Button android:id="@+id/button3" android:layout_width="100dp" android:layout_height="100dp"/>
        <Button android:id="@+id/button4" android:layout_width="100dp" android:layout_height="100dp"/>
        <Button android:id="@+id/button5" android:layout_width="100dp" android:layout_height="100dp"/>
        <Button android:id="@+id/button6" android:layout_width="100dp" android:layout_height="100dp"/>

    </GridLayout>
</LinearLayout>
